# ============================================
# APP ENVIRONMENT
# ============================================
NODE_ENV=development

# Port your API server runs on
PORT=3000

# ============================================
# CORS 
# ============================================
CORS_ORIGIN=*
ALLOWED_DOMAIN=*

# ============================================
# DATABASE (PostgreSQL via Prisma)
# ============================================
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://notifyhub:localdev123@localhost:5432/notifyhub?schema=public"

# ============================================
# REDIS 
# ============================================
REDIS_HOST=localhost


REDIS_PORT=6379

#  (leave empty if no password)
REDIS_PASSWORD=

REDIS_DB=0

# ============================================
# SENDGRID (Email Delivery Service)
# ============================================
# Your SendGrid API key (get from https://sendgrid.com)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Email address to send from
SENDGRID_FROM_EMAIL=noreply@notifyhub.local

# Display name for sender
SENDGRID_FROM_NAME=NotifyHub


# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=100

# ============================================
# ADMIN
# ============================================
# Admin email for notifications and support
ADMIN_EMAIL=admin@notifyhub.local